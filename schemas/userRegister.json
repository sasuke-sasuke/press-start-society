{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "Root Schema",
    "required": [
        "username",
        "password",
        "first_name",
        "last_name",
        "email"
    ],
    "properties": {
        "username": {
            "type": "string",
            "minLength": 3,
            "maxLength": 15
        },
        "password": {
            "type": "string",
            "minLength": 3,
            "maxLength": 15
        },
        "first_name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 15
        },
        "last_name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 15
        },
        "email": {
            "type": "string",
            "minLength": 6,
            "maxLength": 60,
            "format": "email"
        }
    }
}